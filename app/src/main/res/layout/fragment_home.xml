<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/golden"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:minWidth="160dp"
                        android:orientation="vertical"
                        app:cardCornerRadius="30dp"
                        android:padding="10dp"
                        app:cardElevation="10dp"
                        android:backgroundTint="@color/white"
                        app:cardUseCompatPadding="true"
                        android:id="@+id/prayersFragBtn"
                        >
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/prayers"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Prayer Times"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_horizontal|bottom"
                            android:textColor="@color/black"
                            android:layout_marginBottom="20dp"
                            android:textSize="18sp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:minWidth="160dp"
                        android:orientation="vertical"
                        app:cardCornerRadius="30dp"
                        android:padding="10dp"
                        app:cardElevation="10dp"
                        android:backgroundTint="@color/white"
                        android:layout_margin="0dp"
                        app:cardUseCompatPadding="true"
                        android:id="@+id/tasbeehFragBtn"
                        >
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/beads"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tasbeeh"
                            android:layout_gravity="center_horizontal|bottom"
                            android:textColor="@color/black"
                            android:layout_marginBottom="20dp"
                            android:textSize="18sp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:minWidth="160dp"
                        android:orientation="vertical"
                        app:cardCornerRadius="30dp"
                        android:padding="10dp"
                        app:cardElevation="10dp"
                        android:backgroundTint="@color/white"
                        android:layout_margin="0dp"
                        app:cardUseCompatPadding="true"
                        android:id="@+id/quranFragBtn"
                        >
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/quran"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quran"
                            android:layout_gravity="center_horizontal|bottom"
                            android:textColor="@color/black"
                            android:layout_marginBottom="20dp"
                            android:textSize="18sp"
                            />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>